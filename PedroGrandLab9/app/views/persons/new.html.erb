  <%= label_tag(:name, "Name") %>
  <%= text_field_tag(:name) %>
  <%= label_tag(:last_name, "Last Name") %>
  <%= text_field_tag(:last_name) %>
  <%= label_tag(:bd, "Birth Date") %>
  <%= date_field_tag(:bd) %>
