<% if @new %>
  <div style="margin-top: 5%;margin-left: 40%;width: 15%;">
  <%= form_tag("/persons", method: "post") do %>
    <%= label_tag(:name, "Name") %>
    <%= text_field_tag(:name) %>
    <%= label_tag(:last_name, "Last Name") %>
    <%= text_field_tag(:last_name) %>
    <%= label_tag(:bd, "Birth Date") %>
    <%= date_field_tag(:bd) %>
    <%= label_tag(:des, "Description") %>
    <%= text_field_tag(:des) %>
    <%= check_box_tag(:actor) %>
    <%= label_tag(:actor, "Actor") %>
    <%= check_box_tag(:director) %>
    <%= label_tag(:director, "Director") %>
    <%= submit_tag("Create") %>
  <% end %>
  </div>
<% else %>
  <table style="margin-left: 28%;margin-top: 5%;">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Birth Date</th>
      <th>Description</th>
    </tr>
    <% @persons.each do |person| %>
      <tr>
        <td><%= person.first_name %></td>
        <td><%= person.last_name %></td>
        <td><%= person.birth_date.to_s %></td>
        <td><%= person.description %></td>
      </tr>
    <% end %>
  </table>
<% end %>